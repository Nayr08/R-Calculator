package calculator;

import java.util.Scanner;

/**
 *
 * @author User
 */
public class Calculator {

    /**
     * @param args the command line arguments
     */
    public static void main(String[] args) {
        // TODO code application logic here
        
        Scanner input=new Scanner(System.in);
        System.out.println(" Welcome to my Calculator ");
        
        do{
        int control;
       
        
        System.out.println(" ---Calculator--- ");
        System.out.println(" Choose operation ");
        System.out.println(" Type 1 for '+' ");
        System.out.println(" Type 2 for '-' ");
        System.out.println(" Type 3 for '*' ");
        System.out.println(" Type 4 for '/' ");
        System.out.println(" Enter: ");
        
    
        
        
        control=input.nextInt();
        
            switch (control) {
                case 1 -> {
                    do {
                        System.out.println(" +Addition+ ");
                        System.out.println(" Enter first value: ");
                        double n=input.nextInt();
                        System.out.println(" Enter second value: ");
                        double n1=input.nextInt();
                        double answer=(n+n1);
                        System.out.println(n + " + "  +  n1 + " = " + answer);
                        
                        System.out.println(" Done calculating.... ");
                        System.out.println(" Type 1 to continue operation ");
                        System.out.println(" Type 2 to switch operation or exit calculator ");
                        
                        
                        control=input.nextInt();
                        
                       
                       
                    }while (control==1);
                }
                case 2 -> {
                    do {
                        
                        System.out.println(" -Subtraction- ");
                        System.out.println(" Enter first value ");
                        double n=input.nextInt();
                        System.out.println(" Enter second value ");
                        double n1=input.nextInt();
                        double answer=(n-n1);
                        System.out.println(n+ " - " + n1 + " = " +answer);
                        
                        System.out.println(" Done calculating.... ");
                        System.out.println(" Type 1 to continue operation ");
                        System.out.println(" Type 2 to switch operation or exit calculator  ");
                        
                        control=input.nextInt();
                        
                    }while (control==1);
                }
                case 3 -> {
                    do {
                        
                        System.out.println(" *Multiplication*- ");
                        System.out.println(" Enter first value ");
                        double n=input.nextInt();
                        System.out.println(" Enter second value ");
                        double n1=input.nextInt();
                        double answer=(n*n1);
                        System.out.println(n+ " * " + n1 + " = "+answer);
                        
                        System.out.println(" Done calculating.... ");
                        System.out.println(" Type 1 to continue operation ");
                        System.out.println(" Type 2 to switch operation or exit calculator ");
                        
                        control=input.nextInt();
                        
                    }while (control==1);
                }
                case 4 -> {
                    do{ 
                        System.out.println(" /Division/ ");
                        System.out.println(" Enter first value ");
                        double n=input.nextInt();
                        System.out.println(" Enter second value ");
                        double n1=input.nextInt();
                        double answer=(n/n1);
                        System.out.println(n +  " / " + n1 + " = "+answer);
                        
                        System.out.println(" Done calculating.... ");
                        System.out.println(" Type 1 to continue operation ");
                        System.out.println(" Type 2 to switch operation or exit calculator ");
                        
                   control=input.nextInt();
                  }while (control==1);
                }
                  }     
                        System.out.println(" Type 1 to switch operation  ");
                        System.out.println(" Type 2 to exit calculator  ");

                        int menu;
                        menu=input.nextInt();
                     if (menu==2){
                         break;
                     } 
        }while (true); }   
}
        
        
        
        

    


   